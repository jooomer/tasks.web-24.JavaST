  <servlet-mapping>
    <servlet-name>AdministratorController</servlet-name>
    <url-pattern>/administrator</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CatalogueController</servlet-name>
    <servlet-class>ua.shop.controller.CatalogueController</servlet-class>

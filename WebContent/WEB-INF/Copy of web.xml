    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AccountController</servlet-name>
    <servlet-class>ua.shop.controller.AccountController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AccountController</servlet-name>
    <url-pattern>/account</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdministratorController</servlet-name>
    <servlet-class>ua.shop.controller.AdministratorController</servlet-class>

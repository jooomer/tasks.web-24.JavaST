    <servlet-name>CatalogueController</servlet-name>
    <url-pattern>/administrator/catalogue</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UsersController</servlet-name>
    <servlet-class>ua.shop.controller.UsersController</servlet-class>
  </servlet>
